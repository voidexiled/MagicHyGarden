  Group #MghgFarmInfoPanel {
    LayoutMode: Top;
    Anchor: (Top: 80, Right: 20, Width: @InfoPanelWidth, Height: @InfoPanelHeight);
    Padding: (Left: @InfoPad, Top: @InfoPad, Right: @InfoPad, Bottom: @InfoPad);
    Background: (TexturePath: "../ItemQualities/Tooltips/ItemTooltipDefault.png", Border: 18);
    HitTestVisible: false;
    Visible: false;

    Label #FarmInfoTitle {
      Style: (
        FontSize: 17,
        RenderBold: true,
        TextColor: #f3f6fb
      );
    }

    Group {
      Anchor: (Top: 8, Height: 1);
      Background: #ffffff(0.08);
    }

    Group #FarmInfoBody {
      LayoutMode: Top;
      Anchor: (Top: 8);

      Label #FarmInfoBalance {
        Style: (
          FontSize: 12,
          TextColor: #9fc1e8
        );
      }

      Label #FarmInfoFertile {
        Anchor: (Top: 2);
        Style: (
          FontSize: 12,
          TextColor: #9fc1e8
        );
      }

      Label #FarmInfoSellMultiplier {
        Anchor: (Top: 2);
        Style: (
          FontSize: 12,
          TextColor: #9fc1e8
        );
      }

      Label #FarmInfoMutationMultiplier {
        Anchor: (Top: 2);
        Style: (
          FontSize: 12,
          TextColor: #9fc1e8
        );
      }

      Label #FarmInfoMembers {
        Anchor: (Top: 2);
        Style: (
          FontSize: 12,
          TextColor: #9fc1e8
        );
      }
    }
  }
}

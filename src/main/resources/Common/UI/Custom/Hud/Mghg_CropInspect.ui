  $C.@Container #MghgFarmInfoPanel {
    Anchor: (Right: 40, Width: @InfoPanelWidth, Height: @InfoPanelHeight);
    HitTestVisible: false;
    Visible: false;

    #Title {
      $C.@Title #FarmInfoTitle {}
    }

    #Content {
      Group #FarmInfoBody {
        LayoutMode: Top;

        Label #FarmInfoBalance {
          Anchor: (Top: 4);
          Style: (
            FontSize: 12,
            TextColor: #9fc1e8
          );
        }

        Label #FarmInfoFertile {
          Anchor: (Top: 4);
          Style: (
            FontSize: 12,

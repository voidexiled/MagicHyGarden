$C = "../Common.ui";

Group {
  Anchor: (Width: 268, Height: 94);
  Padding: (Bottom: 6);

  Button #SelectButton {
    Anchor: (Full: 0);
    Padding: 2;
    Style: (
      Default: (
        Background: #1a2a39,
      ),
      Hovered: (
        Background: #2e4760,
      ),
      Pressed: (
        Background: #3d5b79,
      ),
      Disabled: (
        Background: #0f1822,
      ),
      Sounds: $C.@ButtonSounds,
    );

    Group #CardContent {
      Anchor: (Full: 0);
      Background: #132233;
      LayoutMode: Left;
      Padding: (Left: 8, Right: 8, Top: 8, Bottom: 8);

      Group #IconPanel {
        Anchor: (Width: 44, Height: 44, Top: 2);
        Background: #102030;
        Padding: 2;

        ItemIcon #PerkIcon {
          Anchor: (Full: 0);
          ShowItemTooltip: false;
          ItemId: "unknown";
        }
      }

      Group #TextPanel {
        FlexWeight: 1;
        LayoutMode: Top;
        Padding: (Left: 8);

        Label #PerkName {
          Anchor: (Height: 22);
          Style: (
            FontSize: 16,
            TextColor: #f0f6ff,
            HorizontalAlignment: Start,
            VerticalAlignment: Center,
            RenderBold: true,
          );
          Text: "Perk Name";
        }

        Label #PerkState {
          Anchor: (Height: 18, Top: 2);
          Style: (
            FontSize: 13,
            TextColor: #7caacc,
            HorizontalAlignment: Start,
            VerticalAlignment: Center,
          );
          Text: "State";
        }

        Label #PerkSummary {
          Anchor: (Height: 16, Top: 2);
          Style: (
            FontSize: 12,
            TextColor: #9cb0c6,
            HorizontalAlignment: Start,
            VerticalAlignment: Center,
          );
          Text: "Summary";
        }
      }
    }

    Group #UnavailableOverlay {
      Anchor: (Full: 0);
      Background: #0a1118(0.50);
      LayoutMode: CenterMiddle;
      Visible: false;

      Label #UnavailableLabel {
        Style: (
          FontSize: 13,
          TextColor: #9cb0c6,
          HorizontalAlignment: Center,
          VerticalAlignment: Center,
          RenderBold: true,
        );
        Text: "COMING SOON";
      }
    }

    Group #SelectedTop {
      Anchor: (Left: 0, Top: 0, Right: 0, Height: 2);
      Background: #d6b35f;
      Visible: false;
    }

    Group #SelectedBottom {
      Anchor: (Left: 0, Bottom: 0, Right: 0, Height: 2);
      Background: #d6b35f;
      Visible: false;
    }

    Group #SelectedLeft {
      Anchor: (Left: 0, Top: 0, Bottom: 0, Width: 2);
      Background: #d6b35f;
      Visible: false;
    }

    Group #SelectedRight {
      Anchor: (Right: 0, Top: 0, Bottom: 0, Width: 2);
      Background: #d6b35f;
      Visible: false;
    }
  }
}
